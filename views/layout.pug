doctype html
html
  head
    title= title || 'Library Management System'
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/style.css')
  body
    nav.navbar
      .nav-brand
        a(href='/dashboard') ðŸ“š Library Management
      .nav-links
        if user
          if user.role === 'admin'
            a(href='/books') Books
            a(href='/members') Members
            a(href='/transactions') Transactions
            a(href='/overdue') Overdue & Fines
          else
            a(href='/books/browse') Browse Books
            a(href='/my-transactions') My Books
          .user-info
            span Welcome, #{user.name}
            form.logout-form(method='POST', action='/auth/logout', style='display: inline;')
              button.btn-logout(type='submit') Logout
        else
          a(href='/auth/login') Login
    
    main.container
      if title
        h1= title
      block content
    
    script(src='/js/main.js')